@model IEnumerable<ProjetoModeloDDD.MVC.ViewModels.LivroViewModel>

@{
    ViewBag.Title = "Livros";

    ViewBag.PlaceHolderPesquisar = "(ID, Nome, Autor)";
    ViewBag.Pesquisar = true;
    ViewBag.BtnCadastro = true;
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.LivroID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Autor)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LivroID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Autor)
            </td>
            <td style="display: flex;">
                @Html.ActionLink("Editar", "Editar", new { id = item.LivroID }, new { @class = "btn btn-light btn-sm" })
                @Html.ActionLink("Detalhes", "Detalhes", new { id = item.LivroID }, new { @class = "btn btn-light btn-sm" })
            </td>
        </tr>
    }

</table>
