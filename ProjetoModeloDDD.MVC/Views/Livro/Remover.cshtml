@model ProjetoModeloDDD.MVC.ViewModels.LivroViewModel

@{
    ViewBag.Title = "Remover livro";
    ViewBag.ID = Model.LivroID;
    ViewBag.BtnVoltar = true;
    ViewBag.BtnEditar = true;
}

<h3 class="text-danger">
    Tem certeza que deseja deletar o livro "@Html.DisplayFor(model => model.LivroID) - @Html.DisplayFor(model => model.Nome)
    <span class="badge text-bg-info">@Html.DisplayFor(model => model.Autor) </span>"?
</h3>
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Autor)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Autor)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <button type="submit" class="btn btn-danger">Remover</button>
        </div>
    }
</div>
