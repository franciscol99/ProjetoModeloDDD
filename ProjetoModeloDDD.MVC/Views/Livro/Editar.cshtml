@model ProjetoModeloDDD.MVC.ViewModels.LivroViewModel

@{
    ViewBag.Title = "Editar livro";
    ViewBag.ID = Model.LivroID;
    ViewBag.BtnVoltar = true;
    ViewBag.BtnRemover = true;
}

<h4>  @Html.DisplayFor(model => model.LivroID) - @Html.DisplayFor(model => model.Nome) <span class="badge text-bg-info">@Html.DisplayFor(model => model.Autor) </span></h4>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="row g-3">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.LivroID)

    <div class="col-md-6">
        @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "form-label" })
        <div class="col-md-12">
            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="col-md-6">
        @Html.LabelFor(model => model.Autor, htmlAttributes: new { @class = "form-label" })
        <div class="col-md-12">
            @Html.EditorFor(model => model.Autor, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Autor, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <button type="submit" class="btn btn-totvs">Salvar</button>
    </div>
</div>
}

