@model ProjetoModeloDDD.MVC.ViewModels.AgendaTelefonicaViewModel

@{
    ViewBag.Title = "Remover contato da agenda";
    ViewBag.ID = Model.AgendatelefonicaID;
    ViewBag.BtnVoltar = true;
    ViewBag.BtnEditar = true;
}

<h3 class="text-danger">
    Tem certeza que deseja deletar o contato "@Html.DisplayFor(model => model.AgendatelefonicaID) - @Html.DisplayFor(model => model.Nome)
    <span class="badge text-bg-info">@Html.DisplayFor(model => model.Telefone) </span>"?
</h3>

<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Telefone)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Telefone)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <button type="submit" class="btn btn-danger">Remover</button>
        </div>
    }
</div>
