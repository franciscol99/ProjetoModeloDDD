@model ProjetoModeloDDD.MVC.ViewModels.CarroViewModel

@{
    ViewBag.Title = "Editar carro";
    ViewBag.ID = Model.CarroID;
    ViewBag.BtnVoltar = true;
    ViewBag.BtnRemover = true;
}

<h4>
    @Html.DisplayFor(model => model.CarroID)
    - @Html.DisplayFor(model => model.Nome)
    <span class="badge text-bg-info">@Html.DisplayFor(model => model.Modelo) </span>
</h4>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="row g-3">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.CarroID)

    <div class="col-md-6">
        @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-12">
            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="col-md-6">
        @Html.LabelFor(model => model.Modelo, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-12">
            @Html.EditorFor(model => model.Modelo, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Modelo, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="col-md-6">
        @Html.LabelFor(model => model.Velocidade, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-12">
            @Html.EditorFor(model => model.Velocidade, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Velocidade, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="col-md-6">
        @Html.LabelFor(model => model.Ano, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-12">
            @Html.EditorFor(model => model.Ano, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Ano, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <button type="submit" class="btn btn-totvs">Salvar</button>
    </div>
</div>
}

