@model ProjetoModeloDDD.MVC.ViewModels.AnimalViewModel

@{
    ViewBag.Title = "Editar animal";
    ViewBag.ID = Model.AnimalID;
    ViewBag.BtnVoltar = true;
    ViewBag.BtnRemover = true;
}

<h4>  @Html.DisplayFor(model => model.AnimalID) 
    - @Html.DisplayFor(model => model.Nome) 
    <span class="badge text-bg-info">@Html.DisplayFor(model => model.Especie) </span></h4>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="row g-3">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.AnimalID)

    <div class="col-md-6">
        @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-12">
            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="col-md-6">
        @Html.LabelFor(model => model.Especie, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-12">
            @Html.EditorFor(model => model.Especie, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Especie, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="col-md-6">
        @Html.LabelFor(model => model.Idade, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-12">
            @Html.EditorFor(model => model.Idade, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Idade, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="col-md-6">
        @Html.LabelFor(model => model.Som, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-12">
            @Html.EditorFor(model => model.Som, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Som, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <button type="submit" class="btn btn-totvs">Salvar</button>
    </div>
</div>
}

