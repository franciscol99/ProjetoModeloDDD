@model ProjetoModeloDDD.MVC.ViewModels.MusicaViewModel

@{
    ViewBag.Title = "Detalhes da música";
    ViewBag.ID = Model.MusicaID;
    ViewBag.BtnVoltar = true;
    ViewBag.BtnEditar = true;
    ViewBag.BtnRemover = true;
}

<div>
    <h4>
        @Html.DisplayFor(model => model.MusicaID)
        - @Html.DisplayFor(model => model.Nome)
        <span class="badge text-bg-info">@Html.DisplayFor(model => model.Autor) </span>
    </h4>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Autor)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Autor)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Gravadora)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Gravadora)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Lancamento)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Lancamento)
        </dd>

    </dl>
</div>
