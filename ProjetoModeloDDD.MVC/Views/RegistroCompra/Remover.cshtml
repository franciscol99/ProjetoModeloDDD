@model ProjetoModeloDDD.MVC.ViewModels.RegistroCompraViewModel

@{
    ViewBag.Title = "Remover registro de compra";
    ViewBag.ID = Model.RegistroCompraID;
    ViewBag.BtnVoltar = true;
    ViewBag.BtnEditar = true;
    ViewBag.BtnDetalhes = true;
}

<h3 class="text-danger">
    Tem certeza que deseja deletar o fabricante "@Html.DisplayFor(model => model.RegistroCompraID) 
    - @Html.DisplayFor(model => model.ValorTotal)
    <span class="badge text-bg-info">@Html.DisplayFor(model => model.Quantidade) </span>"?
</h3>

<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ValorTotal)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ValorTotal)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Quantidade)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Quantidade)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <button type="submit" class="btn btn-danger">Remover</button>
        </div>
    }
</div>
