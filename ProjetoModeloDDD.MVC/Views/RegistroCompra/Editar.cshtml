@model ProjetoModeloDDD.MVC.ViewModels.RegistroCompraViewModel

@{
    ViewBag.Title = "Editar";
    ViewBag.ID = Model.RegistroCompraID;
    ViewBag.BtnVoltar = true;
    ViewBag.BtnRemover = true;
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="row g-3">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.RegistroCompraID)

    <div class="col-md-6">
        @Html.LabelFor(model => model.ValorTotal, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-12">
            @Html.EditorFor(model => model.ValorTotal, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ValorTotal, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="col-md-6">
        @Html.LabelFor(model => model.Quantidade, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-12">
            @Html.EditorFor(model => model.Quantidade, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Quantidade, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="alert alert-info">Realizada em @Html.Raw(Model.DataCadastro)</div>

    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <button type="submit" class="btn btn-totvs">Salvar</button>
    </div>
</div>
}

